@model List<OrchardLite.Web.Models.ContentItem>
@{
    ViewBag.Title = "All Content";
}

<div class="alert" style="background-color: #E8F4FD; border-color: #FF9900; color: #232F3E;">
    <h4><i class="fas fa-list" style="color: #FF9900;"></i> All Content Items (@ViewBag.TotalRecords records)</h4>
    <p class="mb-0">Complete list of content items for AWS DMS migration demonstration.</p>
</div>

<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="card-title">@post.Title</h6>
                    <p class="card-text small">@(string.IsNullOrEmpty(post.Summary) ? "No summary available" : post.Summary)</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-calendar"></i> @post.PublishedDate.ToShortDateString()
                        </small>
                        <small class="text-muted">
                            <span class="badge bg-secondary">@post.ContentType</span>
                            <i class="fas fa-eye ms-1"></i> @post.ViewCount
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4 text-center">
    <a href="/" class="btn" style="background-color: #232F3E; border-color: #232F3E; color: white;"><i class="fas fa-arrow-left"></i> Back to Home</a>
</div>
